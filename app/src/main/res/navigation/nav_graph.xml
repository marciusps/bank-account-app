<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.bank_account_app.activity.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_bankTransitionFragment"
            app:destination="@id/bankTransitionFragment"
            app:enterAnim="@anim/enter_from_right" />
        <action
            android:id="@+id/action_homeFragment_to_bankTransferFragment"
            app:destination="@id/bankTransferFragment"
            app:enterAnim="@anim/enter_from_right" />
        <action
            android:id="@+id/action_homeFragment_to_statementFragment"
            app:destination="@id/statementFragment"
            app:enterAnim="@anim/enter_from_right" />
    </fragment>
    <fragment
        android:id="@+id/createAccFragment"
        android:name="com.example.bank_account_app.activity.CreateAccFragment"
        android:label="fragment_create_acc"
        tools:layout="@layout/fragment_create_acc" />
    <fragment
        android:id="@+id/bankTransitionFragment"
        android:name="com.example.bank_account_app.activity.BankTransitionFragment"
        android:label="fragment_bank_transition"
        tools:layout="@layout/fragment_bank_transition" >
        <argument
            android:name="transition"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/bankTransferFragment"
        android:name="com.example.bank_account_app.activity.BankTransferFragment"
        android:label="fragment_transfer"
        tools:layout="@layout/fragment_bank_transfer" />
    <fragment
        android:id="@+id/statementFragment"
        android:name="com.example.bank_account_app.activity.StatementFragment"
        android:label="fragment_statement"
        tools:layout="@layout/fragment_statement" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.bank_account_app.activity.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/enter_from_right"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_createAccFragment"
            app:destination="@id/createAccFragment"
            app:enterAnim="@anim/enter_from_right" />
    </fragment>
</navigation>